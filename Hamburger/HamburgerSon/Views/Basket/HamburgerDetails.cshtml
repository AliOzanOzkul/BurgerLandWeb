@model  HamburgerWeb.DTO_s.HamburgerExtraMaterialsDTO

@{
    var extraMaterials = ViewBag.id as SelectList;
    Layout = "_Layout";
}



<h4>Hambureger</h4>
<hr />
<form asp-action="AddToBasket" method="post">
    <div class="text-center">
        <div class="img-box">
            <img src="@Model.PictureUrl" alt="">
        </div>
    </div>
    <div class="container ">
        <div class="row ">

            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label  class="control-label"></label>
                    <input asp-for="@Model.Name" class="form-control" readonly />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Description" class="control-label"></label>
                    <input asp-for="@Model.Description" class="form-control" readonly />
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Quantity" class="control-label"></label>
                    <input id="adet" onchange="adetDegisti()" value="1" asp-for="@Model.Quantity" class="form-control" />
                    <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Price" class="control-label"></label>
                    <input id="fiyat" asp-for="@Model.Price" class="form-control" readonly />
                    <span asp-validation-for="@Model.Price" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="form-group">
                    <label asp-for="@Model.Product1" class="control-label"></label>
                    <select id="urun" asp-for="@Model.Product1" class="w-100" asp-items="@extraMaterials"></select>


                </div>
                <div class="form-group">
                    <label asp-for="@Model.Product2" class="control-label"></label>
                    <select asp-for="@Model.Product2" class="w-100" asp-items="@extraMaterials"></select>

                </div>


                <div class="form-group">
                    <label asp-for="@Model.Product3" class="control-label"></label>
                    <select asp-for="@Model.Product3" class="w-100" asp-items="ViewBag.Id"></select>

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Product4" class="control-label"></label>
                    <select asp-for="@Model.Product4" class="w-100" asp-items="ViewBag.Id"></select>

                </div>
                <div class="form-group">
                    <label asp-for="@Model.Product5" class="control-label"></label>
                    <select onchange="adetDegisti2()" asp-for="@Model.Product5" class="w-100" asp-items="ViewBag.Id"></select>

                </div>

            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <input type="submit" value="Sepete Ekle" class="btn btn-success " style="width:200px" />
                </div>
            </div>



        </div>
    </div>
</form>

<script>
    var fiyat = parseFloat(document.getElementById("fiyat").value);
    function adetDegisti() {

        var adet = document.getElementById("adet").value;
        var yeniFiyat = adet * fiyat;



        document.getElementById("fiyat").value = yeniFiyat;
    }


</script>


}